<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:paging="using:iHentai.Paging">

    <Style TargetType="paging:HentaiFrame">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="paging:HentaiFrame">
                    <Frame x:Name="Frame" Background="{TemplateBinding Background}"
                           Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}"
                           ContentTransitions="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ContentTransitions}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>